#include<stdlib.h>
int main()
{
    int n,i,*arr,largest;
    printf("enter the size of the array:");
    scanf("%d",&n);
    
    arr =(int*)malloc(n*sizeof(int));
    
    printf("enter the elements of the array:");
    for (i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    largest = arr[0];
    for(i = 1; i < n; i++) 
    {
        if(arr[i] > largest) 
        {
            largest = arr[i];
        }
    
    }
       printf("The largest element in the array is %d\n", largest);
returnÂ 0;
}
